---
/**
 * Supabase Test Page
 * 
 * This page is used to test the Supabase connection.
 * It's intended for development and testing purposes only.
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import SupabaseTestComponent from '../components/SupabaseTest.astro';
---

<Layout title="Supabase Connection Test">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold mb-6">Supabase Connection Test</h1>
    
    <div class="max-w-2xl">
      <SupabaseTestComponent />
      
      <div class="mt-8 p-4 border rounded-lg bg-blue-50 dark:bg-blue-900">
        <h2 class="text-lg font-semibold mb-2">Next Steps</h2>
        <p class="mb-4">
          Once your connection is working, you can:
        </p>
        <ol class="list-decimal list-inside space-y-2">
          <li>Run the SQL migrations in Supabase</li>
          <li>Set up data ingestion from FMP</li>
          <li>Implement the data fetching in your components</li>
        </ol>
      </div>
    </div>
  </main>
</Layout> 