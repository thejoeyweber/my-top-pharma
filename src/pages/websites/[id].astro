            <h2 class="text-xl font-medium text-gray-900 mb-4">Website Summary</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
              <KeyMetric
                label="Category"
                value={getCategoryLabel(website.category)}
