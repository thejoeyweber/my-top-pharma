---
/**
 * Admin Dashboard Home
 * 
 * Main landing page for the admin section.
 * Displays key administrative features and system status.
 */

import DashboardLayout from '../../layouts/DashboardLayout.astro';
import Card from '../../components/atoms/Card.astro';
import CardHeader from '../../components/atoms/CardHeader.astro';
import CardBody from '../../components/atoms/CardBody.astro';
import DataSourceVisualizer from '../../components/DataSourceVisualizer.astro';

const title = 'Admin Dashboard';
const description = 'MyTopPharma Administration Dashboard';
const currentPath = Astro.url.pathname;
---

<DashboardLayout 
  title={title} 
  description={description}
  currentPath={currentPath}
  isAdmin={true}
  showDataSource={true}
>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <!-- System Status -->
    <Card class="col-span-full md:col-span-1">
      <CardHeader>System Status</CardHeader>
      <CardBody>
        <div class="space-y-2">
          <div class="flex justify-between items-center">
            <span>Database Connection</span>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
              Connected
            </span>
          </div>
          <div class="flex justify-between items-center">
            <span>Data Feeds</span>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
              Active
            </span>
      </div>
          <div class="flex justify-between items-center">
            <span>Airbyte</span>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
              Pending
          </span>
          </div>
          <div class="flex justify-between items-center">
            <span>API Status</span>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
              Online
          </span>
      </div>
    </div>
      </CardBody>
    </Card>
    
    <!-- Recent Activity -->
    <Card class="col-span-full md:col-span-1">
      <CardHeader>Recent Activity</CardHeader>
      <CardBody>
        <ul class="space-y-3 max-h-60 overflow-y-auto">
          <li class="text-sm">
            <span class="text-gray-500">10:45 AM:</span> Data feed completed: SEC EDGAR
          </li>
          <li class="text-sm">
            <span class="text-gray-500">09:30 AM:</span> User logged in: admin@example.com
          </li>
          <li class="text-sm">
            <span class="text-gray-500">Yesterday:</span> Backup completed successfully
          </li>
          <li class="text-sm">
            <span class="text-gray-500">Yesterday:</span> System update applied: v2.1.4
          </li>
        </ul>
      </CardBody>
    </Card>
    
    <!-- Database Stats -->
    <Card class="col-span-full md:col-span-1">
      <CardHeader>Database Statistics</CardHeader>
      <CardBody>
        <div class="space-y-2">
          <div class="flex justify-between">
            <span>Companies</span>
            <span class="font-semibold">147</span>
                </div>
          <div class="flex justify-between">
            <span>Products</span>
            <span class="font-semibold">2,341</span>
                    </div>
          <div class="flex justify-between">
            <span>Therapeutic Areas</span>
            <span class="font-semibold">32</span>
                    </div>
          <div class="flex justify-between">
            <span>Websites</span>
            <span class="font-semibold">512</span>
                </div>
          <div class="flex justify-between">
            <span>Users</span>
            <span class="font-semibold">28</span>
    </div>
        </div>
      </CardBody>
      </Card>
    </div>
    
  <!-- Quick Links -->
  <div class="mt-8">
    <h2 class="text-lg font-medium text-gray-900 mb-4">Quick Links</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
      <a href="/admin/data-feeds" class="block p-4 bg-white border rounded-lg hover:bg-gray-50 transition">
        <h3 class="font-medium">Data Feeds</h3>
        <p class="text-sm text-gray-500">Manage data import processes</p>
      </a>
      <a href="/admin/audit/feature-flags" class="block p-4 bg-white border rounded-lg hover:bg-gray-50 transition">
        <h3 class="font-medium">Feature Flags</h3>
        <p class="text-sm text-gray-500">Toggle application features</p>
      </a>
      <a href="/admin/user-management" class="block p-4 bg-white border rounded-lg hover:bg-gray-50 transition">
        <h3 class="font-medium">User Management</h3>
        <p class="text-sm text-gray-500">Manage user accounts</p>
      </a>
      <a href="/admin/system-logs" class="block p-4 bg-white border rounded-lg hover:bg-gray-50 transition">
        <h3 class="font-medium">System Logs</h3>
        <p class="text-sm text-gray-500">View application logs</p>
      </a>
      <a href="/admin/api-config" class="block p-4 bg-white border rounded-lg hover:bg-gray-50 transition">
        <h3 class="font-medium">API Configuration</h3>
        <p class="text-sm text-gray-500">Manage API settings</p>
      </a>
      <a href="/admin/test-db" class="block p-4 bg-white border rounded-lg hover:bg-gray-50 transition">
        <h3 class="font-medium">Database Test</h3>
        <p class="text-sm text-gray-500">Test database connection</p>
      </a>
      </div>
  </div>
</DashboardLayout> 