---
/**
 * Admin Layout Template
 * 
 * Specialized layout for admin-specific pages with admin navigation.
 * Includes header, admin sidebar, main content area, and footer.
 */

// Update to use the consolidated BaseLayout
import BaseLayout from './BaseLayout.astro'; 
import Header from '../components/organisms/Header.astro';
import Footer from '../components/organisms/Footer.astro';
import Sidebar from '../components/organisms/Sidebar.astro';
import Breadcrumb from '../components/molecules/Breadcrumb.astro';
import DataSourceVisualizer from '../components/DataSourceVisualizer.astro';

export interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  currentPath?: string;
  breadcrumbs?: {
    label: string;
    href: string;
    isActive?: boolean;
  }[];
  showDataSource?: boolean;
  showDevTools?: boolean;
}

const { 
  title = 'Admin Dashboard',
  description = 'MyTopPharma Administration Dashboard',
  ogImage,
  currentPath = Astro.url.pathname,
  breadcrumbs = [],
  showDataSource = true,
  showDevTools = import.meta.env.DEV
} = Astro.props;

// Ensure the current path is an admin path
const isAdminPath = currentPath.startsWith('/admin');
---

<BaseLayout 
  title={title} 
  description={description}
  ogImage={ogImage}
  showDevTools={showDevTools}
>
  {/* Keep Header and Footer here as this layout defines their presence via BaseLayout */}
  <div class="flex flex-1 flex-grow pt-16"> {/* Adjust pt-16 if header height changes */}
    {/* Admin Sidebar - Remove client:load */}
    <Sidebar currentPath={currentPath} isAdmin={true} />
    
    {/* Main content area for Admin pages */}
    <div class="flex-1 transition-all duration-300 w-full lg:pl-64">
      <main class="px-4 sm:px-6 lg:px-8 py-6">
        {/* Admin-specific header styling */}
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-lg mb-6 p-4 text-white shadow-md">
          <h1 class="text-2xl font-bold">{title}</h1>
          {description && <p class="text-sm opacity-90 mt-1">{description}</p>}
        </div>

        {/* Data Source Visualizer */}
        {showDataSource && (
          <div class="mb-6">
            <DataSourceVisualizer />
          </div>
        )}
        
        {/* Breadcrumbs */}
        {breadcrumbs.length > 0 && (
          <div class="mb-6">
            <Breadcrumb items={breadcrumbs} />
          </div>
        )}
        
        {/* Admin content wrapper */}
        <div class="bg-white rounded-lg shadow-sm p-6">
          <slot />
        </div>
      </main>
    </div>
    {/* Note: Footer is rendered by the BaseLayout this component wraps */}
  </div>
</BaseLayout> 