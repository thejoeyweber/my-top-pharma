---
import '../styles/global.css';
import FeatureFlagToggle from '../components/FeatureFlagToggle.astro';
import Footer from '../components/organisms/Footer.astro';
import Header from '../components/organisms/Header.astro';
import { ViewTransitions } from 'astro:transitions';

export interface Props {
	title: string;
	description?: string;
	ogImage?: string;
	styleOverrides?: string;
}

const { 
	title = 'MyTopPharma',
	description = 'Explore pharmaceutical companies, products, and industry insights',
	ogImage = '/images/og-image.jpg',
	styleOverrides,
} = Astro.props;

// Construct the full page title
const pageTitle = title !== 'MyTopPharma' 
	? `${title} | MyTopPharma`
	: 'MyTopPharma - Pharmaceutical Industry Insights';
---

<!doctype html>
<html lang="en" class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{pageTitle}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Lexend:wght@400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body class="h-full bg-gray-50 text-gray-900 antialiased">
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
		<ViewTransitions />
		{/* Development UI Components (Dev Mode Only) */}
		<FeatureFlagToggle />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style> 