/**
 * Website Card Component
 * 
 * Displays a website's basic information in a card format,
 * with grid and list view options.
 */
import Button from '../atoms/Button.astro';
import type { Website } from '../../types/websites';
import { websiteCategories, companies } from '../../utils/dataUtils';
import { getWebsiteScreenshotUrl } from '../../utils/assetUtils';

interface Props {
  website: Website;
  view?: 'grid' | 'list';
  isCompact?: boolean;
}

const { 
  website,
  view = 'grid',
  isCompact = false
} = Astro.props;

// Find website category label
const categoryObj = websiteCategories.find(cat => cat.value === website.category);
const categoryLabel = categoryObj ? categoryObj.label : website.category;

// Find company info
const company = companies.find(c => c.id === website.companyId);
const companyName = company ? company.name : website.companyId;

// Get domain ID for routing
const getDomainId = (domain: string) => {
  return domain.replace(/[^a-zA-Z0-9-]/g, '-').toLowerCase();
};

// Format date for display (MM/DD/YYYY)
const formatDate = (dateString: string) => {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' });
};

