---
/**
 * TherapeuticAreaCard Component
 * 
 * Displays a therapeutic area's information in a card format with statistics.
 */
import Card from '../atoms/Card.astro';
import type { TherapeuticArea } from '../../interfaces/entities';

interface Props {
  therapeuticArea: TherapeuticArea;
  companyCount?: number;
  productCount?: number;
  websiteCount?: number;
}

const { 
  therapeuticArea, 
  companyCount = 0, 
  productCount = 0, 
  websiteCount = 0 
} = Astro.props;

// Calculate total count for sorting/display
const totalCount = companyCount + productCount + websiteCount;
---

<Card class="h-full">
  <div class="p-4 flex flex-col h-full">
    <h3 class="text-lg font-semibold text-gray-900 mb-2">{therapeuticArea.name}</h3>
    
    <p class="text-sm text-gray-600 mb-4 flex-grow line-clamp-3">
      {therapeuticArea.description || 'No description available'}
    </p>
    
    <div class="mt-auto border-t border-gray-200 pt-3">
      <div class="grid grid-cols-3 gap-2">
        <div class="text-center">
          <p class="text-sm font-medium text-gray-900">{companyCount}</p>
          <p class="text-xs text-gray-500">Companies</p>
        </div>
        <div class="text-center">
          <p class="text-sm font-medium text-gray-900">{productCount}</p>
          <p class="text-xs text-gray-500">Products</p>
        </div>
        <div class="text-center">
          <p class="text-sm font-medium text-gray-900">{websiteCount}</p>
          <p class="text-xs text-gray-500">Websites</p>
        </div>
      </div>
      
      <div class="mt-3 text-right">
        <a 
          href={`/therapeutic-areas/${therapeuticArea.slug}`}
          class="inline-flex items-center justify-center px-3 py-1.5 text-xs font-medium rounded-md bg-blue-600 text-white hover:bg-blue-700 transition-colors"
        >
          View Details
        </a>
      </div>
    </div>
  </div>
</Card> 