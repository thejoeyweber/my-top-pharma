---
/**
 * FilterChip Component
 * 
 * A removable chip for displaying selected filters.
 * Includes the filter label and a remove button.
 */

interface Props {
  label: string;
  value: string;
  type: string;
  class?: string;
}

const {
  label,
  value,
  type,
  class: className = "",
} = Astro.props;
---

<div 
  class:list={[
    "inline-flex items-center rounded-full bg-primary-100 py-1 pl-3 pr-2 text-sm font-medium text-primary-700",
    className
  ]}
  data-filter-chip
  data-filter-type={type}
  data-filter-value={value}
>
  <span>{label}</span>
  <button 
    type="button"
    class="ml-1 inline-flex rounded-full bg-primary-100 p-0.5 text-primary-500 hover:bg-primary-200 hover:text-primary-600 focus:outline-none focus:ring-2 focus:ring-primary-600 focus:ring-offset-2"
    data-remove-filter
  >
    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
      <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
    </svg>
    <span class="sr-only">Remove filter</span>
  </button>
</div> 