---
/**
 * BaseLayout Template
 * 
 * Standard page layout with header, main content area, and footer.
 * Use this for most non-dashboard pages.
 */

import Layout from '../../layouts/Layout.astro';
import Header from '../organisms/Header.astro';
import Footer from '../organisms/Footer.astro';
import Breadcrumb from '../molecules/Breadcrumb.astro';

export interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  currentPath?: string;
  breadcrumbs?: {
    label: string;
    href: string;
    isActive?: boolean;
  }[];
  hasHero?: boolean;
  showDevTools?: boolean;
}

const { 
  title,
  description,
  ogImage,
  currentPath = Astro.url.pathname,
  breadcrumbs = [],
  hasHero = false,
  showDevTools = import.meta.env.DEV
} = Astro.props;
---

<Layout 
  title={title} 
  description={description}
  ogImage={ogImage}
  showDevTools={showDevTools}
>
  <Header currentPath={currentPath} />
  
  {/* Hero Slot - Full Bleed Content */}
  {hasHero && (
    <div class="w-full z-10">
      <slot name="hero" />
    </div>
  )}
  
  <main class="flex-grow">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      {/* Breadcrumbs */}
      {breadcrumbs.length > 0 && (
        <div class="mb-6">
          <Breadcrumb items={breadcrumbs} />
        </div>
      )}
      
      <slot />
    </div>
  </main>
  
  <Footer />
</Layout> 