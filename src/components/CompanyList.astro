---
/**
 * Company List Component
 * 
 * Displays a list of pharmaceutical companies fetched directly from Supabase.
 * Uses server-side rendering for initial data.
 */

// Import canonical types
import type { Company } from '../interfaces/entities/Company';
import { supabase } from '../lib/supabase';
import { formatMarketCap } from '../utils/stringUtils';

// Fetch companies directly from Supabase
let companies: Company[] = [];
let error: string | null = null;

try {
  const { data, error: supabaseError } = await supabase
    .from('companies')
    .select('*')
    .order('name');
    
  if (supabaseError) {
    throw supabaseError;
  }
  
  companies = data as Company[];
} catch (err) {
  console.error('Error fetching companies:', err);
  error = err instanceof Error ? err.message : 'Failed to fetch companies';
}
---

<div class="company-list">
  {error ? (
    <div class="text-center py-8">
      <p class="text-red-500">Error: {error}</p>
    </div>
  ) : !companies || companies.length === 0 ? (
    <div class="text-center py-8">
      <p class="text-gray-500">No companies found</p>
    </div>
  ) : (
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {companies.map((company: Company) => (
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold">{company.name}</h3>
            <span class="text-sm text-gray-500">{company.tickerSymbol}</span>
          </div>
          
          <div class="space-y-2">
            <p class="text-sm">
              <span class="font-medium">Market Cap:</span>
              <span class="ml-2">{formatMarketCap(company.marketCapBillions ? company.marketCapBillions * 1e9 : 0)}</span>
            </p>
            
            <p class="text-sm">
              <span class="font-medium">Exchange:</span>
              <span class="ml-2">{company.exchange || 'N/A'}</span>
            </p>
            
            <p class="text-sm">
              <span class="font-medium">Headquarters:</span>
              <span class="ml-2">{company.headquarters || 'N/A'}</span>
            </p>
          </div>
          
          {company.websiteUrl && (
            <div class="mt-4">
              <a 
                href={company.websiteUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="text-blue-500 hover:text-blue-600 text-sm"
              >
                Visit Website â†’
              </a>
            </div>
          )}
        </div>
      ))}
    </div>
  )}
</div>

<style>
  .company-list {
    @apply max-w-7xl mx-auto px-4 py-8;
  }
</style> 