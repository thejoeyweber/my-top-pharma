              <DataTable 
                data={products}
                columns={productColumns}
                defaultSort="name"
              />
            ) : (
              <p class="text-gray-500 italic">No products associated with this company</p>
              )}
            </div>
          </Card>
      </div>
      
      <!-- Websites Tab -->
      <div id="tab-content-websites" role="tabpanel" aria-labelledby="tab-websites" class="space-y-6 hidden">
