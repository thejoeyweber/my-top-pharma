#Top Pharma Environment Configuration Example
# Copy this file to .env and adjust values as needed

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=toppharma
DB_USER=postgres
DB_PASSWORD=password

# Prefect Configuration
PREFECT_API_URL=http://127.0.0.1:4200/api
PREFECT_API_KEY=

# Concurrency Settings
MAX_CONCURRENT_TASKS=10
MAX_CONCURRENT_FLOWS=5

# S3/MinIO Configuration
S3_BUCKET_NAME=top-pharma-data-lake
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_ENDPOINT_URL=http://localhost:9000

# External API Rate Limits (requests per minute)
SEC_EDGAR_RATE_LIMIT=10
OPENCORPORATES_RATE_LIMIT=60
FDA_RATE_LIMIT=240
CLINICALTRIALS_RATE_LIMIT=60

# Flow Settings
DEFAULT_DATA_RETENTION_DAYS=90
LOG_LEVEL=INFO
